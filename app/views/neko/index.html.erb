<div class="min-h-screen bg-gray-900 text-white p-8">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold text-center mb-8 text-green-400">
      ­Ъљ▒ neko_gem сЃЄсЃбсЃџсЃ╝сѓИ ­Ъљ▒
    </h1>
    
    <div class="grid md:grid-cols-2 gap-8">
      <!-- сЃЄсЃЋсѓЕсЃФсЃѕсЂ«уїФ -->
      <div class="bg-gray-800 rounded-lg p-6">
        <h2 class="text-2xl font-semibold mb-4 text-blue-400">сЃЄсЃЋсѓЕсЃФсЃѕсЂ«уїФ</h2>
        <pre class="text-green-400 font-mono text-lg leading-relaxed bg-gray-900 p-4 rounded border border-gray-700"><%= @neko_art %></pre>
      </div>
      
      <!-- сЃЕсЃ│сЃђсЃасЂфуїФ -->
      <div class="bg-gray-800 rounded-lg p-6">
        <h2 class="text-2xl font-semibold mb-4 text-purple-400">сЃЕсЃ│сЃђсЃасЂфуїФ</h2>
        <pre class="text-yellow-400 font-mono text-lg leading-relaxed bg-gray-900 p-4 rounded border border-gray-700"><%= @random_neko_art %></pre>
      </div>
    </div>
    
    <!-- сѓцсЃ│сѓ┐сЃЕсѓ»сЃєсѓБсЃќсЂфсЃюсѓ┐сЃ│ -->
    <div class="text-center mt-8">
      <button onclick="loadRandomNeko()" 
              class="bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-lg transition-colors">
        Тќ░сЂЌсЂёсЃЕсЃ│сЃђсЃауїФсѓњУАеуц║
      </button>
    </div>
    
    <!-- Тќ░сЂЌсЂёуїФсѓњУАеуц║сЂЎсѓІсѓесЃфсѓб -->
    <div id="new-neko" class="mt-8 bg-gray-800 rounded-lg p-6 hidden">
      <h2 class="text-2xl font-semibold mb-4 text-pink-400">Тќ░сЂЌсЂёсЃЕсЃ│сЃђсЃауїФ</h2>
      <pre id="new-neko-art" class="text-pink-400 font-mono text-lg leading-relaxed bg-gray-900 p-4 rounded border border-gray-700"></pre>
    </div>
  </div>
</div>

<script>
function loadRandomNeko() {
  fetch('/neko/random')
    .then(response => response.json())
    .then(data => {
      document.getElementById('new-neko-art').textContent = data.neko;
      document.getElementById('new-neko').classList.remove('hidden');
    })
    .catch(error => {
      console.error('Error:', error);
      alert('уїФсЂ«УфГсЂ┐УЙ╝сЂ┐сЂФтц▒ТЋЌсЂЌсЂЙсЂЌсЂЪ');
    });
}
</script>
